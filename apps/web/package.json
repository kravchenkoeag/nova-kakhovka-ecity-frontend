  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ecity/auth": "workspace:*",
    "@ecity/api-client": "workspace:*",
    "@ecity/types": "workspace:*",
    "@ecity/ui": "workspace:*",
    "@tanstack/react-query": "^5.0.0",
    "next": "14.2.0",
    "next-auth": "^4.24.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "lucide-react": "^0.400.0",
    "date-fns": "^3.0.0",
    "leaflet": "^1.9.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/leaflet": "^1.9.8",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
